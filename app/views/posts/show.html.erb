<div class="d-flex justify-content-between">
  <%= link_to "Back", posts_path, class: "btn btn-outline-text" %>
  <% if true # TODO: Check to see if post belongs to user %>
  <div class="d-inline">
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-primary" %>
    <%= button_to "Delete", @post, method: :delete, data: {confirm: 'Are you sure' }, class: "btn btn-outline-danger", form_class: "d-inline" %>
  </div>
  <% end %>
</div>

<%= render @post %>
